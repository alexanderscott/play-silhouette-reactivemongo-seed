# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                controllers.ApplicationController.index

# A Role needed for the pages bellow
GET			/adminArea                       controllers.ApplicationController.adminArea
GET			/userArea                        controllers.ApplicationController.userArea
GET			/userAndAdminArea                controllers.ApplicationController.userAndAdminArea
GET			/userOrAdminArea                 controllers.ApplicationController.userOrAdminArea

GET			/denied							 controllers.ApplicationController.accessDenied

GET         /signIn                          controllers.ApplicationController.signIn
GET         /signUp                          controllers.ApplicationController.signUp
GET         /signOut                         controllers.ApplicationController.signOut
POST        /authenticate/credentials        controllers.CredentialsAuthController.authenticate
POST        /signUp                          controllers.SignUpController.signUp

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.at(path="/public", file)
GET         /webjars/*file                   controllers.WebJarAssets.at(file)
